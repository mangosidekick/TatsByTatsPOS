<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180sp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="7dp"
    android:background="@drawable/round_rectangle">

    <!-- Image and Product Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_gravity="center"
            android:contentDescription="@string/product_name"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop" />

        <!-- Product Name and Price -->
        <TextView
            android:fontFamily="@font/abel"
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginStart="5sp"
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:text="@string/product_price"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>

    <!-- Quantity Selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/round_rectangle"
        android:layout_marginTop="8dp">

        <!-- Minus Button -->

        <!-- Quantity Text -->
        <ImageButton
            android:src="@drawable/baseline_horizontal_rule_24"
            android:contentDescription="@string/minus"
            android:id="@+id/btn_minus"
            android:layout_width="48sp"
            android:layout_height="48sp"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:backgroundTint="@color/orange"
            android:layout_marginEnd="10sp"
            android:textSize="20sp"
            app:tint="@color/white"
            android:visibility="visible"
            />

        <ImageButton
            android:src="@drawable/baseline_star_24"
            android:contentDescription="@string/visibility_indicator"
            android:id="@+id/star"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:layout_marginEnd="5sp"
            app:tint="@color/orange"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_visibility"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:text="Show on Menu"
            android:textSize="12sp"
            android:visibility="gone"
            android:backgroundTint="@color/orange"
            />

        <EditText
            android:gravity="center"
            android:id="@+id/quantity_text"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:fontFamily="@font/abel"
            android:inputType="number"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:hint="@string/menu_quantity"
            android:text="@string/menu_quantity"
            android:textSize="20sp" />

        <EditText
            android:gravity="center"
            android:id="@+id/quantity_inventory_text"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:fontFamily="@font/abel"
            android:inputType="number"
            android:textColor="@color/black"
            android:visibility="gone"
            android:hint="@string/menu_quantity"
            android:text="5"
            android:textSize="20sp" />

        <!-- Plus Button -->
        <ImageButton
            android:contentDescription="@string/plus"
            android:src="@drawable/baseline_add_24"
            android:id="@+id/btn_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@color/white"
            android:background="@drawable/circle"
            android:backgroundTint="@color/orange"
            android:layout_marginStart="10sp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:tint="@color/white" />
    </LinearLayout>

</LinearLayout>